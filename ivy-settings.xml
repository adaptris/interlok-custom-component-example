<ivysettings>
  <settings defaultResolver="chain-resolver"/>
  <credentials host="development.adaptris.net" realm="Sonatype Nexus Repository Manager"/>
  <property name="nexus-public" value="http://development.adaptris.net/nexus/content/groups/public"/>
  <property name="nexus-releases" value="http://development.adaptris.net/nexus/content/repositories/releases"/>
  <property name="nexus-snapshots" value="http://development.adaptris.net/nexus/content/repositories/snapshots"/>
  <resolvers>
    <chain name="chain-resolver">
      <ibiblio name="nexus-public" m2compatible="true" root="${nexus-public}"/>
      <ibiblio name="nexus-releases" m2compatible="true" root="${nexus-releases}"/>
      <ibiblio name="nexus-snapshots" m2compatible="true" root="${nexus-snapshots}" checkmodified="true" changingPattern=".*-SNAPSHOT.*"/>
    </chain>
  </resolvers>
</ivysettings>